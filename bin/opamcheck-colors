# include this file to get color definitions

# user setting: env var OPAMCHECKCOLORS = true/false (default true)

if ${OPAMCHECKCOLORS:-true}; then
    end='\e[m'
    black='\e[100;97m'
    red='\e[101m'
    green='\e[102m'
    yellow='\e[103m'
    blue='\e[104;97m'
    pink='\e[105m'
    cyan='\e[106m'
    white='\e[107m'
else
    end=
    black=
    red=
    green=
    yellow=
    blue=
    pink=
    cyan=
    white=
fi
